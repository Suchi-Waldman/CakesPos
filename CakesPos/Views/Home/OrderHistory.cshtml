@model IEnumerable<CakesPos.Data.OrderHistoryViewModel>


@section Styles{
    <link href="~/Content/themes/orderStyles.css" rel="stylesheet" />
}


<div class="container well" id="orderHistoryDiv">
    <div class="form-group">
        <label>Search<input class="form-control" id="searchInput" /></label>
        <button class="btn btn-success" id="historySearchBtn">Search</button>
        <label>From<input class="form-control" id="fromInput" type="date" /></label>
        <label>To<input class="form-control" id="toInput" type="date" /></label>
        <button class="btn btn-success" id="applybtn">Apply</button>
        <label>
            Filter Date<select class="form-control">
                <option value="">Today</option>
                <option value="">Yesterday</option>
                <option value="">Last 7 Days</option>
                <option value="">Last 30 Days</option>
                <option value="">None</option>
            </select>
        </label>
    </div>
    <table class="table table-bordered table-hover table-responsive table-striped" id="historyTable">
        <tr>
            <th>Customer</th>
            <th>Order Date</th>
            <th>Requested Date</th>
            <th>Delivery Option</th>
            <th>Total</th>
            <th>Status</th>
            <th>Paid</th>
            <th>Action</th>
        </tr>
        @foreach (CakesPos.Data.OrderHistoryViewModel o in Model)
        {
            <tr class="history">
                <td>@o.lastName @o.firstName</td>
                <td>@o.orderDate</td>
                <td>@o.requiredDate</td>
                <td>@o.deliveryOpt</td>
                <td></td>
                <td></td>
                @if (o.paid)
                {
                    <td style="text-decoration-color:green">Paid</td>
                }
                else
                {
                    <td><span style="color:red">Not Paid</span></td>
                }
                <td>
                    <button class="btn btn-info viewDetailsBtn" data-toggle="modal" data-target="#orderDetailsModal">View Details</button>
                    <button class="btn btn-success paymentBtn">Payment</button>
                </td>
            </tr>
        }
    </table>
</div>

